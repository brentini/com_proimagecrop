<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/administrator/components/com_proimagecrop/models/fields">
        <field name="id" type="text" default="0" readonly="true" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" />
        <field name="name" type="text" class="inputbox" size="40" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" required="true" />
        <field name="published" type="list" label="JSTATUS" description="COM_PROIMAGECROP_FIELD_STATE_DESC" class="inputbox" size="1" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="ordering" type="text" class="inputbox" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />
        <field name="description" type="textarea" rows="4" label="JGLOBAL_DESCRIPTION" description="COM_PROIMAGECROP_FIELD_DESCRIPTION_DESC" class="inputbox" />
    </fieldset>
    <fieldset name="properties">
        <field name="width" type="text" class="inputbox" size="10" label="COM_PROIMAGECROP_FIELD_WIDTH_LABEL" description="COM_PROIMAGECROP_FIELD_WIDTH_DESC" />
        <field name="height" type="text" class="inputbox" size="10" label="COM_PROIMAGECROP_FIELD_HEIGHT_LABEL" description="COM_PROIMAGECROP_FIELD_HEIGHT_DESC" />
        <field name="margin_top" type="text" class="inputbox" size="3" label="COM_PROIMAGECROP_FIELD_MARGIN_TOP_LABEL" description="COM_PROIMAGECROP_FIELD_MARGIN_TOP_DESC" />
        <field name="margin_right" type="text" class="inputbox" size="3" label="COM_PROIMAGECROP_FIELD_MARGIN_RIGHT_LABEL" description="COM_PROIMAGECROP_FIELD_MARGIN_RIGHT_DESC" />
        <field name="margin_bottom" type="text" class="inputbox" size="3" label="COM_PROIMAGECROP_FIELD_MARGIN_BOTTOM_LABEL" description="COM_PROIMAGECROP_FIELD_MARGIN_BOTTOM_DESC" />
        <field name="margin_left" type="text" class="inputbox" size="3" label="COM_PROIMAGECROP_FIELD_MARGIN_LEFT_LABEL" description="COM_PROIMAGECROP_FIELD_MARGIN_LEFT_DESC" />
        <field name="align" type="list" label="COM_PROIMAGECROP_FIELD_ALIGN_LABEL" description="COM_PROIMAGECROP_FIELD_ALIGN_DESC" class="inputbox" size="1" default="1">
            <option value="">JSELECT</option>
            <option value="top">COM_PROIMAGECROP_OPTION_TOP</option>
            <option value="right">COM_PROIMAGECROP_OPTION_RIGHT</option>
            <option value="bottom">COM_PROIMAGECROP_OPTION_BOTTOM</option>
            <option value="left">COM_PROIMAGECROP_OPTION_LEFT</option>
        </field>
    </fieldset>
</form>
